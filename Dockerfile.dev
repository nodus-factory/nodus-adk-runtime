FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY pyproject.toml README.md ./
COPY src/ ./src/
RUN pip install --no-cache-dir -e ".[dev]"

# Install OpenTelemetry instrumentation packages for observability
# These are required for tracing with Langfuse
RUN pip install --no-cache-dir \
    opentelemetry-api==1.37.0 \
    opentelemetry-semantic-conventions==0.58b0 \
    opentelemetry-instrumentation==0.58b0 \
    opentelemetry-instrumentation-httpx==0.58b0 \
    opentelemetry-instrumentation-asyncio==0.58b0 \
    litellm>=1.80.0 \
    langfuse

# Expose port
EXPOSE 8080

# Run with reload for development
# Install nodus-adk-agents at runtime from mounted volume
CMD ["sh", "-c", "pip install -q -e /nodus-adk-agents && python -m uvicorn nodus_adk_runtime.server:app --host 0.0.0.0 --port 8080 --reload"]


